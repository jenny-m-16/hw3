<%= form_with :model => @post do |form| %>
  <p>
    <%= form.label "title" %>
    <%= form.text_field "title" %>
  </p>
  <p>
    <%= form.label "posted_on", "Date" %>
    <%= form.text_field "posted_on" %>
    <%= form.label "description" %>
    <%= form.text_field "description" %>
  </p>
  <%= form.submit %>
<% end %>
