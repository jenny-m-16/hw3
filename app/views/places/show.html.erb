<h1><%= @place["name"] %></h1>

<% for post in @posts %>
  <p>
  <h3>
  <%= post["title"] %>
  </h3>
  <li><%= post["posted_on"] %></li>
  <li><%= post["description"] %></li>
  </p>
<% end %>

<p>
  <a href="/posts/new?place_id=<%= @place["id"] %>">New Post</a>
</p>

<p>
  <a href="/places">Back to Main Page</a>
</p>

